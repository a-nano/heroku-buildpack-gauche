#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

FILENAME=gauche.d.tgz
URL=https://raw.githubusercontent.com/naduma/heroku-gauche/master/setup

mkdir -p $BUILD_DIR $CACHE_DIR

if [ ! -e $CACHE_DIR/$FILENAME ]; then
  echo "-----> Fetching"
  curl $URL/$FILENAME -s -ssl3 -o $CACHE_DIR/$FILENAME
fi

echo "-----> Extracting"
tar zxf $CACHE_DIR/$FILENAME -C $BUILD_DIR
